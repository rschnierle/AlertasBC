<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - My ASP.NET MVC Application</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <header>
            <div class="content-wrapper"  style="height:auto; background-color:black">
               <img class="ResponsiveImage" src="~/Images/master.png" />
            </div>
            @if(Session["User"]!=null)
            {
                
                AlertasBC.Model.User user = Session["User"] as AlertasBC.Model.User;
                                
            <div class="content-wrapper"  style="height:10px; padding-top:0px">
               <div style="float:left">
                   <b>Bienvenido:</b> @user.NAME
               </div>
                <div style="float:left; padding-left:20px">
                  <b>Dependencia:</b> @(Session["Dependency"]==null? "": Session["Dependency"])
               </div>
                 <div style="float:right; padding-right:10px">
                  @Html.ActionLink("Salir", "LogOff", "Account")
               </div>
            </div>
            }
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year -Dev Force</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
